<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.24"
            android:background="@drawable/login_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.76"
            android:background="@drawable/item_bg"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/item_circle"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="4sp"
                android:padding="6sp"
                android:src="@drawable/item_circle" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_circle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/item_circle"
                android:paddingTop="0dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_name"
                android:layout_below="@id/profile_name"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:textColor="#AAA6A6"
                android:textSize="12sp" >

                <TextView
                    android:id="@+id/profile_invoke_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/profile_submit_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/profile_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/profile_party"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/profile_stu_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
          	<Button 
          	    android:id="@+id/logout"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:paddingLeft="50dp"
          	    android:paddingRight="50dp"
          	    android:paddingTop="8dp"
          	    android:paddingBottom="8dp"
          	    android:background="@drawable/logout_bg"
          	    android:textColor="@color/logout_color"
          	    android:textSize="16sp"
          	    android:text="@string/logout"
          	    android:textStyle="bold"
          	    android:layout_marginTop="30dp"
          	    android:layout_below="@id/detail_info"
          	    android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/index_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.48"
            android:scaleType="fitEnd"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.52" />
    </LinearLayout>

</FrameLayout>