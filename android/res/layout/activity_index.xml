<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fdparty.partyapp.IndexActivity" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.91" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:background="@drawable/login_background" >

        <TextView
            android:id="@+id/news_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/news"
            android:textStyle="bold"
            android:textColor="@color/notChoseTag"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chat_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/chat"
            android:textStyle="bold"
            android:textColor="@color/notChoseTag"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/profile"
            android:textStyle="bold"
            android:textColor="@color/notChoseTag"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/leader_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/leader"
            android:textStyle="bold"
            android:textColor="@color/notChoseTag"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>