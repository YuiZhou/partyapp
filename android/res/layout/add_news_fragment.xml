<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/previewFont"
        android:text="@string/add_news_text"/>
    <Button 
          	    android:id="@+id/news_frag_button"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:paddingLeft="25dp"
          	    android:paddingRight="25dp"
          	    android:paddingTop="8dp"
          	    android:paddingBottom="8dp"
          	    android:background="@drawable/logout_bg"
          	    android:textColor="@color/logout_color"
          	    android:textSize="16sp"
          	    android:text="@string/add_news_button"
          	    android:textStyle="bold"
          	    android:layout_marginTop="30dp"
          	    android:layout_gravity="center"/>

</LinearLayout>
