<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2184"
            android:background="@drawable/login_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7816"
            android:background="@drawable/item_bg" >

            <ImageView
                android:id="@+id/item_circle"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="4sp"
                android:padding="6sp"
                android:src="@drawable/item_circle" />

            <TextView
                android:id="@+id/news_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_circle"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/item_circle"
                android:paddingTop="0dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/news_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/news_detail_title"
                android:layout_below="@id/news_detail_title"
                android:textColor="#AAA6A6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/news_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/news_detail_date"
                android:layout_below="@id/news_detail_date" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/index_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.4368"
            android:scaleType="fitEnd"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.5632" />
    </LinearLayout>

</RelativeLayout>