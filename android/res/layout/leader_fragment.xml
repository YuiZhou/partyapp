<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.24"
            android:background="@drawable/login_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="0.76" >

            <RelativeLayout
                android:id="@+id/leader_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_bg"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp" >

                <ImageView
                    android:id="@+id/leader_list_item_circle"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginTop="4sp"
                    android:padding="6sp"
                    android:src="@drawable/item_circle" />

                <TextView
                    android:id="@+id/leader_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/leader_list_item_circle"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/leader_list_item_circle"
                    android:paddingTop="0dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/leader_list_title" />

                <TextView
                    android:id="@+id/leader_list_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/leader_list_title"
                    android:layout_below="@id/leader_list_title"
                    android:textColor="#AAA6A6"
                    android:textSize="12sp"
                    android:text="@string/leader_list_hint" />
                <FrameLayout 
                    android:id="@+id/leader_list_frag"
                    android:layout_width="match_parent"
                    android:layout_below="@id/leader_list_hint"
                    android:layout_alignLeft="@id/leader_list_hint"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/leader_news"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_bg"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp" >

                <ImageView
                    android:id="@+id/leader_news_item_circle"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginTop="4sp"
                    android:padding="6sp"
                    android:src="@drawable/item_circle" />

                <TextView
                    android:id="@+id/leader_news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/leader_news_item_circle"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/leader_news_item_circle"
                    android:paddingTop="0dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/leader_news_title" />

                <TextView
                    android:id="@+id/leader_news_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/leader_news_title"
                    android:layout_below="@id/leader_news_title"
                    android:textColor="#AAA6A6"
                    android:textSize="12sp"
                    android:text="@string/leader_news_hint" />
                <FrameLayout 
                    android:id="@+id/leader_news_frag"
                    android:layout_width="match_parent"
                    android:layout_below="@id/leader_news_hint"
                    android:layout_alignLeft="@id/leader_news_hint"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/leader_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_bg"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp" >

                <ImageView
                    android:id="@+id/leader_user_item_circle"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginTop="4sp"
                    android:padding="6sp"
                    android:src="@drawable/item_circle" />

                <TextView
                    android:id="@+id/leader_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/leader_user_item_circle"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/leader_user_item_circle"
                    android:paddingTop="0dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/leader_user_title" />

                <TextView
                    android:id="@+id/leader_user_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/leader_user_title"
                    android:layout_below="@id/leader_user_title"
                    android:textColor="#AAA6A6"
                    android:textSize="12sp"
                    android:text="@string/leader_user_hint" />
                <FrameLayout 
                    android:id="@+id/leader_user_frag"
                    android:layout_width="match_parent"
                    android:layout_below="@id/leader_user_hint"
                    android:layout_alignLeft="@id/leader_user_hint"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/index_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.48"
            android:scaleType="fitEnd"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.52" />
    </LinearLayout>

</FrameLayout>